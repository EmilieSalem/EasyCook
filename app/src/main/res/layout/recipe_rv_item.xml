<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/recipe_rv_image"
            android:background="@drawable/rounded_corners"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/logo_easycook" />

        <TextView
            android:id="@+id/recipe_rv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/recipe_rv_heart"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/recipe_rv_image"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Nom de la recette" />

        <com.like.LikeButton
            android:id="@+id/recipe_rv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:translationZ="90dp"
            app:icon_size="15dp"
            app:icon_type="heart"
            card_view:anim_scale_factor="1.5"
            card_view:layout_constraintBottom_toBottomOf="@+id/recipe_rv_name"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/recipe_rv_name"
            card_view:layout_constraintTop_toTopOf="@+id/recipe_rv_name" />

        <TextView
            android:id="@+id/recipe_rv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="4"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/recipe_rv_image"
            card_view:layout_constraintTop_toBottomOf="@+id/recipe_rv_name"
            tools:text="Description de la recette recette recette recette recette recette recette recette recette recette recette recette recette recette recette recette recette recette " />

        <ImageButton
            android:id="@+id/recipe_rv_menu"
            style="?android:attr/actionOverflowButtonStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/recipe_rv_description"
            card_view:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/recipe_rv_tag1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="?colorSecondary"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintHorizontal_chainStyle="packed"
            card_view:layout_constraintStart_toEndOf="@+id/recipe_rv_image"
            card_view:layout_constraintTop_toBottomOf="@+id/recipe_rv_description"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="FILTRE 1" />

        <TextView
            android:id="@+id/recipe_rv_tag2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="?colorSecondary"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/recipe_rv_tag1"
            card_view:layout_constraintTop_toBottomOf="@+id/recipe_rv_description"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="FILTRE 2"

            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
