<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/popup_ingredient_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez un ingrédient"
        app:layout_constraintBottom_toTopOf="@+id/popup_ingredient_amount_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/popup_ingredient_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez une quantité"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/popup_ingredient_unit_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_ingredient_name_input" />

    <EditText
        android:id="@+id/popup_ingredient_unit_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez l'unité de mesure"
        app:layout_constraintBottom_toTopOf="@+id/popup_btn_add_ingredient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/popup_ingredient_amount_input" />

    <Button
        android:id="@+id/popup_btn_add_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="OK"
        android:backgroundTint="?colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/popup_btn_cancel_ingredient"
        app:layout_constraintTop_toBottomOf="@+id/popup_ingredient_unit_input" />

    <Button
        android:id="@+id/popup_btn_cancel_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Annuler"
        app:layout_constraintEnd_toStartOf="@+id/popup_btn_add_ingredient"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_ingredient_unit_input" />

</androidx.constraintlayout.widget.ConstraintLayout>