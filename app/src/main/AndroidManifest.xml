<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.easycook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_easycook"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_easycook_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyCook">
        <activity android:name="com.example.easycook.ui.scanQRCode.ScanQRCodeActivity" />
        <activity android:name="com.example.easycook.ui.recipeList.RecipeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.easycook.ui.recipeDetails.RecipeDetailsActivity" />
        <activity android:name="com.example.easycook.ui.raGlasses.RAGlassesActivity" />
        <activity android:name="com.example.easycook.ui.generateQRCode.GenerateQRCodeActivity" />
        <activity android:name="com.example.easycook.ui.createRecipe.CreateRecipeActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>